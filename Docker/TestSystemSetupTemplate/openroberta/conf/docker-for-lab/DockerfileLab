FROM rbudde/openroberta_base:2

ARG LAST_RUN_OF_BASE=2019-04-09

EXPOSE 1999

RUN mkdir --parent /opt/openRoberta/lib /opt/openRoberta
WORKDIR /opt/openRoberta

COPY ["start.sh","./"]
RUN chmod ugo+rx ./start.sh

COPY ["lib/","./lib/"]
COPY ["staticResources/","./staticResources/"]
COPY ["./","./"]

ENTRYPOINT ["./start.sh"]
CMD []