{
    "compilerOptions": {
        "outDir": "../OpenRobertaServer/staticResources/js",
        "target": "es5",
        "rootDir": "ts",
        "rootDirs": ["ts/app/nepostackmachine", "ts/app/neuralnetwork", "ts/app/simulation/simulationLogic/", "ts/app/helper"],
        "typeRoots" : ["./node_modules/@types"],
        "module": "amd",
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "allowJs": true,
        "strict": false,
        "strictNullChecks": false,
        "downlevelIteration": true, // iterator iteration with 'for of' loop
        "incremental": true,
    },
    "include": ["ts/**/*"],
    //"include": ["ts/app/simulation/simulationLogic/**/*"],
    "exclude": [
        "**/node_modules/",
        "**/interpreter.runStackMachineJson.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
}